<section>
    <div class="row">
        <div class="col-lg-8 d-flex mx-auto my-3 py-3 flex-column justify-content-center">
        <h1 class="text-center" id="tituloMovies">Ironhack Cinema</h1>
        <h4 class="text-center pt-3">Click on the movie to check the showtime</h4>
        </div>
    </div>
    <div class="d-flex flex-wrap">
        {{#each movies}}
        <div class="card my-5 mx-5 shadow text-center " style="width: 22%;" id="eachCard">
            <img class="card-img-top" style="object-fit: cover;" src="{{this.image}}" alt="">
            <div class="card-body bg-white col justify-content-center rounded">
                <h3 class="card-title p-3 mx-auto text-black">{{this.title}}</h3>
                <a href="/movie/{{this._id}}">See more</a>
            </div>
        </div>
        {{/each}}
    </div>
</section>